<% include partial/header %>
    <h1> <%= title %></h1>
    <% if(errors.length > 0) {%>
        <% errors.forEach(function(error){%>
            <li><%= error.msg %></li>
        <% }); %>
    <% } %>
    <form method="post" action="/submit">
        <label>First Name</label>
        <input type="text" id="first_name" name="first_name" placeholder="First Name" value="" />
        <br>
        <br>
        <label>Last Name</label>
        <input type="text" id="last_name" name="last_name" placeholder="Last Name" />
        <br>
        <br>
        <label>Email Address</label>
        <input type="text" id="email_address" name="email_address" placeholder="Email Address" />
        <br>
        <br>
        <input type="submit" id="submit" name="submit" placeholder="Submit" />
    </form>


<% if(name.length > 0) {%>
    <table>
        <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th>Action</th>
        </thead>
    <% name.forEach(function(item){%>
            <tr>
                <td><%= item.first_name%></td>
                <td><%= item.last_name%></td>
                <td><%= item.email_address%></td>
                <td><button type="button" class="deleteUser" data-id="<%= item._id %>" >Delete</button> </td>
            </tr>
    <% }); %>
    </table>

<% } %>

<% include partial/footer %>
